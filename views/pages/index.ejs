<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../layout/head')%>
</head>

<body>
    <%- include('../layout/header')%>
    <h2>Search by title or author </h2>
    <h3><%= savedArr.length %> Saved Books</h3>

    <main>
        <a class="details-button" href="searches/new">Search for books</a>

        <% savedArr.forEach(b=> { %>
        <div class="book-container">
            <img src=<%= b.image_url%>>
            <h2 class="book-title"><%= b.title%></h2>
            <p class="book-author"><%= b.author%></p>
            <a class="details-button" href="/book/<%=b.id%>">View Details</a>
        </div>
        <% }) %>

    </main>
    <%- include('../layout/footer')%>

</body>

</html>