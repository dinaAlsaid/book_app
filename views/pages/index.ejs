<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../layout/head')%>
</head>

<body>
    <header>
        <h1>Best Books!</h1>
    </header>
    <h2>Search by title or author </h2>

    <main>
        <h3><%= savedArr.length %> Saved Books</h3>
        <a href="searches/new">Search for books</a>

        <% savedArr.forEach(b=> { %>
        <div class="book-container">
            <img src=<%= b.image_url%>>
            <h2 class="book-title"><%= b.title%></h2>
            <p class="book-author"><%= b.author%></p>
            <!-- <form action="/book/<%= b.id%>" method="post"> <button name="detailss" value="2" type="submit">View details</button>
            </form> -->
            <a class="details-button" href="/book/<%=b.id%>">View Details</a>
        </div>
        <% }) %>

    </main>
</body>

</html>